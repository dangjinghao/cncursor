{
  "name": "cncursor",
  "displayName": "cncursor",
  "description": "Enhanced cursor movement and word operations for Chinese text in VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cncursor.moveLeft",
        "title": "向左移动一个中文单词距离的光标"
      },
      {
        "command": "cncursor.moveRight",
        "title": "向右移动一个中文单词距离的光标"
      },
      {
        "command": "cncursor.deleteRight",
        "title": "向右删除一个中文单词"
      },
      {
        "command": "cncursor.deleteLeft",
        "title": "向左删除一个中文单词"
      },
      {
        "command": "cncursor.selectRight",
        "title": "向右选择一个中文单词"
      },
      {
        "command": "cncursor.selectLeft",
        "title": "向左选择一个中文单词"
      }
    ],
    "keybindings": [
      {
        "command": "cncursor.moveLeft",
        "key": "ctrl+left",
        "when": "textInputFocus && !accessibilityModeEnabled"
      },
      {
        "command": "cncursor.moveRight",
        "key": "ctrl+right",
        "when": "textInputFocus && !accessibilityModeEnabled"
      },
      {
        "command": "cncursor.deleteRight",
        "key": "ctrl+delete",
        "when": "textInputFocus && !editorReadonly"
      },
      {
        "command": "cncursor.deleteLeft",
        "key": "ctrl+backspace",
        "when": "textInputFocus && !editorReadonly"
      },
      {
        "command": "cncursor.selectRight",
        "key": "ctrl+shift+right",
        "when": "textInputFocus && !accessibilityModeEnabled"
      },
      {
        "command": "cncursor.selectLeft",
        "key": "ctrl+shift+left",
        "when": "textInputFocus && !accessibilityModeEnabled"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}