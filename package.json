{
  "name": "cncursor",
  "publisher": "dangjinghao",
  "license": "MIT",
  "keywords": [
    "chinese",
    "cursor",
    "word",
    "中文",
    "光标",
    "单词",
    "中文分词"
  ],
  "displayName": "cncursor",
  "description": "Enhanced cursor movement and word operations for Chinese text in VS Code.",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cncursor.moveLeft",
        "title": "向左移动一个中文单词距离的光标"
      },
      {
        "command": "cncursor.moveRight",
        "title": "向右移动一个中文单词距离的光标"
      },
      {
        "command": "cncursor.deleteRight",
        "title": "向右删除一个中文单词"
      },
      {
        "command": "cncursor.deleteLeft",
        "title": "向左删除一个中文单词"
      },
      {
        "command": "cncursor.selectRight",
        "title": "向右选择一个中文单词"
      },
      {
        "command": "cncursor.selectLeft",
        "title": "向左选择一个中文单词"
      }
    ],
    "keybindings": [
      {
        "command": "cncursor.moveLeft",
        "key": "ctrl+left",
        "mac": "cmd+left",
        "when": "editorTextFocus"
      },
      {
        "command": "cncursor.moveRight",
        "key": "ctrl+right",
        "mac": "cmd+right",
        "when": "editorTextFocus"
      },
      {
        "command": "cncursor.deleteRight",
        "key": "ctrl+delete",
        "mac": "cmd+delete",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "command": "cncursor.deleteLeft",
        "key": "ctrl+backspace",
        "mac": "cmd+backspace",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "command": "cncursor.selectRight",
        "key": "ctrl+shift+right",
        "mac": "cmd+shift+right",
        "when": "editorTextFocus"
      },
      {
        "command": "cncursor.selectLeft",
        "key": "ctrl+shift+left",
        "mac": "cmd+shift+left",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "cncursor配置",
      "properties": {
        "cncursor.logLevel": {
          "type": "string",
          "default": "info",
          "description": "日志级别",
          "enum": [
            "info",
            "debug",
            "trace"
          ]
        },
        "cncursor.userWords": {
          "type": "string",
          "default": "",
          "description": "用户自定义中文单词，初始化`nodejieba`后遍历动态加载，多个词用空格` `分隔"
        },
        "cncursor.userDictPath": {
          "type": "string",
          "default": "",
          "description": "用户自定义的`nodejieba`格式词典路径，初始化时加载"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "cppjieba:dict": "mkdir -p out/dict && cp -r cppjieba/dict/*.utf8 out/dict/",
    "compile": "npm run cppjieba:dict && tsc -p ./",
    "watch": "npm run cppjieba:dict && tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/tar": "^6.1.13",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "tar": "^7.4.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dangjinghao/cncursor.git"
  }
}